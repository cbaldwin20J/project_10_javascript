extends layout

block title
  | New Loan

block content

  if errors
    h2.error_color Ooops an error occured!
    ul
      each error in errors
        li.error_color
          =error.message

  h1 New Loan
  form(action='/new_loan', method='POST')
    p
      label(for='book_id') Book
      select#book_id(name='book_id')
        each book in books
          option(value=book.id) #{book.title}

    p
      label(for='patron_id') Patron
      select#patron_id(name='patron_id')
        each patron in patrons
          option(value=patron.id) #{patron.first_name} #{patron.last_name}

    p
      label(for='loaned_on') Loaned on:
      input#loaned_on(type='text' value=loanedOn name='loaned_on')
    p
      label(for='return_by') Return by:
      input#return_by(type='text' value=returnBy name='return_by')
    p
      input(type='submit' value='Create New Loan')



